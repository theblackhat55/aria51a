# ARIA5.1 Development Environment Variables
# DO NOT COMMIT TO GIT - Add to .gitignore

# JWT Authentication
JWT_SECRET=dev_secret_key_change_in_production_2025

# AI Provider API Keys (Optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Microsoft Defender Integration (Optional)
MICROSOFT_TENANT_ID=your-tenant-id-here
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here

# SIEM Integration (Optional)
SPLUNK_HEC_URL=https://your-splunk.com:8088/services/collector
SPLUNK_HEC_TOKEN=your-hec-token-here
ELASTIC_URL=https://your-elastic.com:9200
ELASTIC_API_KEY=your-elastic-api-key-here

# Email Notifications (Optional)
SENDGRID_API_KEY=SG.your-sendgrid-key-here
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Encryption Keys
ENCRYPTION_KEY=your-256-bit-encryption-key-here
HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Session Management
SESSION_TIMEOUT=86400
COOKIE_SECRET=your-cookie-secret-here

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_METRICS=true