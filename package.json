{
  "name": "aria5-platform",
  "version": "5.1.0",
  "description": "ARIA5.1 - HTMX-Powered AI Risk Intelligence Platform with Server-Driven UI",
  "type": "module",
  "main": "src/index-htmx.ts",
  "scripts": {
    "start": "node src/server.js",
    "start:docker": "node src/server.js",
    "start:dev": "node --watch src/server.js",
    "dev": "vite",
    "dev:htmx": "wrangler pages dev --compatibility-flags nodejs_compat --compatibility-date 2025-01-01 --ip 0.0.0.0 --port 3000",
    "dev:sandbox": "wrangler pages dev dist --d1=aria52-production --local --ip 0.0.0.0 --port 3000",
    "dev:full": "wrangler pages dev dist --d1=aria52-production --kv=KV --r2=R2 --local --ip 0.0.0.0 --port 3000",
    "dev:production": "wrangler pages dev dist --d1=aria52-production --kv=KV --r2=R2 --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:htmx": "esbuild src/index-htmx.ts --bundle --outfile=dist/_worker.js --platform=node --target=es2020 --format=esm",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:htmx": "npm run build:htmx && wrangler pages deploy dist --project-name aria5-htmx",
    "deploy:staging": "npm run build && wrangler pages deploy dist --project-name aria51-staging",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name aria51-enterprise",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test:curl": "curl http://localhost:3000",
    "test:health": "curl http://localhost:3000/health",
    "db:migrate:local": "wrangler d1 migrations apply aria52-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply aria52-production",
    "db:seed": "wrangler d1 execute aria52-production --local --file=./seed.sql",
    "db:backup": "wrangler d1 export aria52-production --output=./backups/db-$(date +%Y%m%d-%H%M%S).sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute aria52-production --local",
    "db:console:prod": "wrangler d1 execute aria52-production",
    "db:schema:dump": "wrangler d1 execute aria52-production --local --command='.schema'",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run test:integration"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250813.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "cookie": "^1.0.2",
    "esbuild": "^0.25.9",
    "happy-dom": "^14.12.3",
    "hono": "^4.9.6",
    "jsdom": "^24.1.3",
    "msw": "^2.11.1",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vitest": "^1.6.1",
    "wrangler": "^4.29.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "risk-management",
    "grc",
    "compliance",
    "docker",
    "ubuntu",
    "enterprise",
    "security",
    "audit"
  ],
  "author": "ARIA5 Development Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "bcryptjs": "^3.0.2",
    "marked": "^16.2.1",
    "zod": "^4.1.12"
  }
}
